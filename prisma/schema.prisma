generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String  @id @default(cuid())
  firstName  String
  lastName   String
  middleName String?
  email      String  @unique
  password   String
  role       Role    @default(USER)
}

model Product {
  id                 String   @id @default(cuid())
  title              String
  description        String
  price              Float
  discountPercentage Float    @default(0)
  stock              Int      @default(0)
  brand              String
  category           String
  images             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
  SHOP_OWNER
}
