generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  SHOP_OWNER
}

model Account {
  id         String  @id @default(cuid())
  firstName  String
  lastName   String
  middleName String?
  email      String  @unique
  password   String
  role       Role    @default(USER)
  shop       Shop?
}

model Shop {
  id        String    @id @default(cuid())
  name      String
  location  String
  owner     String
  accountId String    @unique
  Account   Account   @relation(fields: [accountId], references: [id])
  Product   Product[]
}

model Product {
  id                 String   @id @default(cuid())
  title              String
  description        String
  price              Float
  discountPercentage Float    @default(0)
  stock              Int      @default(0)
  brand              String
  category           String
  images             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  shopId             String
  shop               Shop     @relation(fields: [shopId], references: [id])
}
